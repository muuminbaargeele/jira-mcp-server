    },
    {
      "key": "auth0_client_id",
      "value": ""
    },
    {
      "key": "auth0_client_secret",
      "value": ""
    },
    {
      "key": "auth0_audience",
      "value": "https://jira-mcp-api"
    },
    {
      "key": "jira_key",
      "value": "TDEV-2447"
    }
  ]
