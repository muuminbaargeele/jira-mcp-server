{
  "info": {
    "_postman_id": "4d680df8-5c2e-4d70-b05e-90b07f6b1f0f",
    "name": "Jira MCP Server",
    "description": "MCP endpoints for Jira issue retrieval and token bootstrap.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth0 - Client Credentials Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"client_id\": \"{{auth0_client_id}}\",\n  \"client_secret\": \"{{auth0_client_secret}}\",\n  \"audience\": \"{{auth0_audience}}\",\n  \"grant_type\": \"client_credentials\"\n}"
        },
        "url": {
          "raw": "{{auth0_token_url}}",
          "host": [
            "{{auth0_token_url}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Jira Issue (MCP)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"{{jira_key}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mcp/jira/issue",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "mcp",
            "jira",
            "issue"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "auth0_token_url",
